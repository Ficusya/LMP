#include <iostream>
#include <future>
using std::cout;

int count = 0;
const int n = 4, m = 5;
int a[n][m];
const size_t NTHREAD = n;

bool task(int i)
{
    bool flag = true;
    for (int j = 0; j < m / 2; ++j)
    {
        if (a[i][j] != a[i][m - j - 1])
        {
            flag = false;
        }
    }
    return flag;
}

int main()
{
    srand(time(NULL));
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < m; j++)
        {
            a[i][j] = rand() % 2;
            cout << a[i][j] << " ";
        }
        cout << '\n';
    }
    std::future<bool> threads[NTHREAD];
    for (int i = 0; i < NTHREAD; ++i)
    {
        threads[i] = std::async(task, i);
    }
    for (int i = 0; i < NTHREAD; ++i)
    {
        if (threads[i].get())
            ++count;
    }
    cout << count << '\n';
    return 0;
}
